<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <include layout="@layout/layout_bar_title"/>
            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_300"
                app:layout_constraintTop_toTopOf="parent"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="#DAD9D9">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="●30无忧退货"
                    android:textSize="@dimen/sp_14"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="@dimen/dp_10"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="●48小时快速退款"
                    android:textSize="@dimen/sp_14"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_10"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="●88元免邮费"
                    android:textSize="@dimen/sp_14"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="@dimen/dp_10"></TextView>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_180"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="空调被"
                    android:textSize="@dimen/sp_20"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"></TextView>
                <TextView
                    android:id="@+id/txt_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="空调被"
                    android:textSize="@dimen/sp_14"
                    android:layout_gravity="center"></TextView>
                <TextView
                    android:id="@+id/txt_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥699"
                    android:textSize="@dimen/sp_18"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_gravity="center"
                    android:textColor="#ff0000"></TextView>
                <TextView
                    android:id="@+id/txt_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="制造商 >"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_gravity="center"
                    android:textColor="#FFC107"
                    android:background="@drawable/shape_txt_border_yellow"
                    android:padding="@dimen/dp_10"></TextView>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#E4E4E4"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_20"/>
            <FrameLayout
                android:id="@+id/layout_norms"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择规格数量"
                    android:textSize="@dimen/sp_14"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="@dimen/dp_10"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=">"
                    android:textSize="@dimen/sp_14"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="@dimen/dp_10"></TextView>
            </FrameLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:background="#E4E4E4"
                android:layout_marginTop="@dimen/dp_20"/>
            <FrameLayout
                android:id="@+id/layout_comment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评价(30)"
                    android:textSize="@dimen/sp_18"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="@dimen/dp_10"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看全部 >"
                    android:textSize="@dimen/sp_14"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="@dimen/dp_10"></TextView>
            </FrameLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#E4E4E4"
                android:layout_marginTop="@dimen/dp_20"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020.9.15"
                android:textSize="@dimen/sp_14"
                android:layout_gravity="right|center"
                android:layout_marginRight="@dimen/dp_10"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020.9.15"
                android:textSize="@dimen/sp_16"
                android:layout_gravity="left"
                android:layout_marginLeft="@dimen/dp_10"></TextView>
            <LinearLayout
                android:id="@+id/layout_imgs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_parameter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"></LinearLayout>
            <WebView
                android:id="@+id/webView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></WebView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="——大家都在看——"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="#ffffff">
        <RelativeLayout
            android:id="@+id/layout_collect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_collect"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_cart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/img_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_cart"
                android:layout_centerInParent="true"/>
            <TextView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:textSize="@dimen/sp_12"
                android:textColor="#ffffff"
                android:layout_alignRight="@id/img_cart"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="8"
                android:gravity="center"
                android:background="@drawable/shape_txt_round_red"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/txt_buy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignRight="@id/img_cart"
            android:textSize="@dimen/sp_12"
            android:textColor="#000000"
            android:text="立即购买"
            android:gravity="center"
            android:background="@drawable/shape_txt_border_black"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignRight="@id/img_cart"
            android:textSize="@dimen/sp_12"
            android:textColor="#ffffff"
            android:text="加入购物车"
            android:gravity="center"
            android:background="#ff0000"
            android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>